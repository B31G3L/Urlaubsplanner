{
  "name": "teamplanner",
  "version": "1.0.0",
  "description": "Moderne Desktop-Anwendung zur Verwaltung von Urlaub, Krankheit, Schulungen und Ãœberstunden",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win"
  },
  "keywords": [
    "teamplanner",
    "urlaub",
    "verwaltung"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "better-sqlite3": "^11.8.0",
    "bootstrap": "^5.3.2",
    "bootstrap-icons": "^1.11.2"
  },
  "build": {
    "appId": "com.teamplanner.app",
    "productName": "Teamplanner",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "scripts",
        "to": "scripts",
        "filter": ["**/*"]
      }
    ],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "portable": {
      "artifactName": "TeamPlanner.${ext}"
    }
  }
}