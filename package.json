{
  "name": "teamplanner-electron",
  "version": "1.0.0",
  "description": "Moderne Desktop-Anwendung zur Verwaltung von Urlaub, Krankheit, Schulungen und Ãœberstunden",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "teamplanner",
    "urlaub",
    "verwaltung"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "better-sqlite3": "^11.8.0",
    "bootstrap": "^5.3.2",
    "bootstrap-icons": "^1.11.2"
  },
  "build": {
    "appId": "com.teamplanner.app",
    "productName": "Teamplanner",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "database/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/logo.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/assets/logo.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/assets/logo.png",
      "category": "Office"
    }
  }
}
